@model WebApp.Models.Product

<div class="container mt-5">
  <div class="card p-4 shadow-lg mx-auto" style="max-width: 600px;">
    <h2 class="mb-4">Ürünü Güncelle</h2>

    <form asp-action="Edit" method="post">
      <input type="hidden" asp-for="Id" />

      <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="Price" class="form-label">Fiyat (TL)</label>
        <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
      </div>

      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">Güncelle</button>
        <a href="/Product" class="btn btn-secondary">Geri Dön</a>
      </div>
    </form>
  </div>
</div>